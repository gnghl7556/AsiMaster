# Database (Railway provides this automatically)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/asimaster

# CORS - Frontend URL (Vercel deployment URL)
CORS_ORIGINS=["http://localhost:3000"]

# Web Push (VAPID keys - generate with: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_CLAIM_EMAIL=admin@asimaster.com

# Crawl settings
CRAWL_DEFAULT_INTERVAL_MIN=60
CRAWL_MAX_RETRIES=3
CRAWL_REQUEST_DELAY_MIN=2
CRAWL_REQUEST_DELAY_MAX=5

# Port (Railway injects automatically)
PORT=8000
