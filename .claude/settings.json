{
  "permissions": {
    "allow": [
      "Bash(cd backend && python -m pytest tests/ -v)",
      "Bash(cd backend && python -m scripts.export_openapi)",
      "Bash(cd frontend && npm run typecheck)",
      "Bash(cd frontend && npm run lint)",
      "Bash(cd frontend && npm run generate-types)",
      "Bash(alembic *)"
    ],
    "deny": []
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh"
          }
        ]
      }
    ]
  }
}
